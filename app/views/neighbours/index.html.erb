<p id="notice"><%= notice %></p>

<h1>Neighbours</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @neighbours.each do |neighbour| %>
      <tr>
        <td><%= neighbour.name %></td>
        <td><%= neighbour.phone %></td>
        <td><%= neighbour.address %></td>
        <td><%= neighbour.about %></td>
        <td><%= link_to 'Show', neighbour %></td>
        <td><%= link_to 'Edit', edit_neighbour_path(neighbour) %></td>
        <td><%= link_to 'Destroy', neighbour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Neighbour', new_neighbour_path %>
